<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="NextAmongUsLauncher.Pages.Page_Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="50, 50, 50, 50">

            <TextBlock Text="应用设置" FontSize="50" FontWeight="ExtraBold" Margin="0, -10, 0, 0" />

            <TextBlock Text="语言" FontSize="18" FontWeight="SemiBold" Margin="0, 50, 0, 10" />
            <ComboBox SelectionChanged="LangsComboBox_SelectionChanged" PlaceholderText="选择用于显示的语言" Width="200">
                <x:String>简体中文 (zh-CN)</x:String>
                <x:String>繁體中文 (zh-TW)</x:String>
                <x:String>English (en-US)</x:String>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>