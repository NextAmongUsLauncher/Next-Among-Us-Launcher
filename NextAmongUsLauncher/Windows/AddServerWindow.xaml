<?xml version="1.0" encoding="utf-8"?>

<Window
    x:Class="NextAmongUsLauncher.Windows.AddServerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="using:NextAmongUsLauncher.Core.Base"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>
    
    <Grid RowDefinitions="Auto, *">
        <StackPanel  Orientation="Vertical">
            <TextBox x:Name="ServerName_TextBox" PlaceholderText="服务器名称" TextChanged="ServerName_TextBox_OnTextChanged" />
            <RadioButtons x:Name="ConnectionProtocolButtons" Header="连接协议:">
                <RadioButton Content="Http协议" Tag="http"/>
                <RadioButton Content="Https协议" Tag="https"/>
            </RadioButtons>
            <TextBox x:Name="ServerIp_TextBox" PlaceholderText="服务器IP" TextChanged="ServerIp_TextBox_OnTextChanged"/>
            <TextBox x:Name="ServerPort_TextBox" PlaceholderText="服务器端口" TextChanged="ServerPort_TextBox_OnTextChanged"/>
            <Button x:Name="AddButton" Click="AddButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>